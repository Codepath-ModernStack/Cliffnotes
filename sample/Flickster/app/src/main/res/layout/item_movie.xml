<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="movie" type="com.codepath.flickster.models.Movie"/>
    </data>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            app:imageUrl = '@{movie.getPosterPath()}'
            android:id="@+id/ivPoster"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitStart"
            tools:background="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/tvTitle"
            android:text='@{movie.getOriginalTitle()}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPoster"
            android:layout_toRightOf="@+id/ivPoster"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal|bold"
            tools:text="Arrival" />

        <TextView
            android:id="@+id/tvDescription"
            android:text='@{movie.getOverview()}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="7"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Taking place after alien crafts land around the world, an expert linguist is recruited by the military " />
    </RelativeLayout>
</layout>